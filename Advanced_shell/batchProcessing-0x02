#!/bin/bash

POKEMON_LIST=("bulbasaur" "ivysaur" "venusaur" "charmander" "charmeleon")
DATA_DIR="pokemon_data"
ERROR_FILE="errors.txt"

mkdir -p "$DATA_DIR"
> "$ERROR_FILE" # Clear previous errors

fetch_pokemon() {
    local pokemon="$1"
    local retries=3
    local delay=2

    echo "Fetching data for $pokemon..."

    for (( attempt=1; attempt<=retries; attempt++ )); do
        # Try fetching
        if curl -s -f "https://pokeapi.co/api/v2/pokemon/$pokemon" -o "$DATA_DIR/$pokemon.json"; then
            echo "Saved data to $DATA_DIR/$pokemon.json ✅"
            return 0
        else
            echo "Attempt $attempt failed for $pokemon..."
            sleep "$delay"
        fi
    done

    # If all retries fail, log the error
    echo "$pokemon" >> "$ERROR_FILE"
    echo "❌ Failed to fetch data for $pokemon after $retries attempts."
    return 1
}

for p in "${POKEMON_LIST[@]}"; do
    fetch_pokemon "$p"
    sleep 1 # Small delay to help with rate limiting
done

echo
if [ -s "$ERROR_FILE" ]; then
    echo "Some requests failed. See $ERROR_FILE for details."
else
    echo "All Pokémon data fetched successfully!"
fi

