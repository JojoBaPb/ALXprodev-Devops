#!/bin/bash

# Ensure data folder exists
if [ ! -d pokemon_data ]; then
    echo "pokemon_data folder not found. Please run Task 2 first."
    exit 1
fi

output_file="pokemon_report.csv"

# Write CSV header
echo "Name,Height (m),Weight (kg)" > "$output_file"

# Loop through all JSON files in pokemon_data
for file in pokemon_data/*.json; do
    # Extract data
    name=$(jq -r '.name' "$file" | sed 's/.*/\u&/')
    height=$(jq '.height' "$file")
    weight=$(jq '.weight' "$file")

    # Convert units
    height_m=$(awk -v h="$height" 'BEGIN { printf "%.1f", h / 10 }')
    weight_kg=$(awk -v w="$weight" 'BEGIN { printf "%.1f", w / 10 }')

    # Append to CSV
    echo "$name,$height_m,$weight_kg" >> "$output_file"
done

echo "CSV Report generated at: $output_file"
echo
cat "$output_file"

# Calculate averages using awk (skip header with NR>1)
awk -F, 'NR>1 { total_h += $2; total_w += $3; count++ }
END { 
    if (count > 0) {
        printf "\nAverage Height: %.2f m\n", total_h / count
        printf "Average Weight: %.2f kg\n", total_w / count
    }
}' "$output_file"
