#!/bin/bash

# Ensure data.json exists
if [ ! -f data.json ]; then
    echo "data.json not found. Please run Task 0 first."
    exit 1
fi

# Extract data from JSON using jq
name=$(jq -r '.name' data.json | sed 's/.*/\u&/')    # Capitalize first letter
height=$(jq '.height' data.json)
weight=$(jq '.weight' data.json)
type=$(jq -r '.types[0].type.name' data.json | sed 's/.*/\u&/')

# Convert to meters and kilograms (Pok√©mon API gives height in decimetres and weight in hectograms)
height_m=$(awk -v h="$height" 'BEGIN { printf "%.1f", h / 10 }')
weight_kg=$(awk -v w="$weight" 'BEGIN { printf "%.1f", w / 10 }')

# Output in human-readable format
echo "$name is of type $type, weighs ${weight_kg}kg, and is ${height_m}m tall."

