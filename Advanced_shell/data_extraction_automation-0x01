#!/bin/bash

# Ensure data.json exists
if [ ! -f data.json ]; then
    echo "data.json not found. Please run Task 0 first."
    exit 1
fi

# Extract data
name=$(jq -r '.name' data.json | sed 's/.*/\u&/')
type=$(jq -r '.types[0].type.name' data.json | sed 's/.*/\u&/')
height=$(jq '.height' data.json)
weight=$(jq '.weight' data.json)

# Convert units
formatted_height=$(awk -v h="$height" 'BEGIN { printf "%.1f", h / 10 }')
formatted_weight=$(awk -v w="$weight" 'BEGIN { printf "%.0f", w / 10 }')

# Output string
echo "$name is of type $type, weighs ${formatted_weight}kg, and is ${formatted_height}m tall."
